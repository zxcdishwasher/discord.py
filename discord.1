import discord
from discord.ext import commands

intents = discord.Intents.default()
intents.message_content = True


bot = commands.Bot(command_prefix=')', intents=intents)


@bot.event
async def on_ready():
    print(f'We have logged in as {bot.user}')



@bot.command()
async def hello(ctx):
    await ctx.send('привет я nerd2')


@bot.command()
async def ping(ctx):
    await ctx.send('pong')

@bot.command()
async def calculate(ctx, operation: str, left: float, right: float):
    
    """что вы бы хотели сделать add,subtract, multiply, divide?"""
    result = 0

    if operation.lower() == 'add':
        result = left + right
    elif operation.lower() == 'subtract':
        result = left - right
    elif operation.lower() == 'multiply':
        result = left * right
    elif operation.lower() == 'divide':
        if right != 0:
            result = left / right
        else:
            await ctx.send("Нельзя делить на ноль!")
            return
    else:
        await ctx.send("Неподдерживаемая операция. Поддерживаемые операции: add, subtract, multiply, divide.")
        return

    await ctx.send(f'Result: {result}')

@bot.command()
async def help(ctx):
    await ctx.send('у меня есть такие команды:hello, ping, calculate')



